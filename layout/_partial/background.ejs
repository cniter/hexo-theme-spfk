<% if (theme.background.on){ %>
    <script>
        $(document).ready(function() {
            var backgroundnum = <%= theme.background.background_sum %>;
            var backgroundimg = "url(<%- config.root %>background/bg-x.jpg)".replace(/x/gi, Math.ceil(Math.random() * backgroundnum));
            $("#mobile-nav").css({"background-image": backgroundimg,"background-size": "cover","background-position": "center"});
            $(".right-col").css({"background-image": backgroundimg,"background-size": "cover","background-position": "center"});
        })
    </script>
<% } else { %>
    <script>
        $(document).ready(function() {
            var backgroundnum = <%= theme.background.background_image %>;
            var backgroundimg = "url(<%- config.root %>background/bg-" + backgroundnum +".jpg)";
            $("#mobile-nav").css({"background-image": backgroundimg,"background-size": "cover","background-position": "center"});
            $(".right-col").css({"background-image": backgroundimg,"background-size": "cover","background-position": "center"});
        })
    </script>
<% } %>

<% if (theme.cursor.on){ %>
    <style>
        body{
            background: #3f3f3f;
            cursor: url(<%- config.root %><%- theme.cursor.cursor_0 %>), url("<%- config.root %><%- theme.cursor.cursor_1 %>"), auto;
        }
    </style>
<% } %>